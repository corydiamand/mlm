<%= form_for(@work, url: { action: :create }) do |f|  %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </div>
  <div class="field">
    <%= f.label :copyright_date %>
    <%= f.text_field :copyright_date %>
  </div>
  <div class="field">
    <%=f.submit "Submit work detail", class: 'btn btn-medium btn-success'%>
  </div>
<% end %>