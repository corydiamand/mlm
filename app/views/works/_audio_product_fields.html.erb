<div class="audio-product-fields">
  <h4><div class="audio-product-count"></div></h4>  <!-- filled by javascript -->
  <fieldset>
    <div class="audio-product-row">
      <div class="field">
        <%= f.label :album %>
        <%= f.text_field :album %>
      </div>
      <div class="field">
        <%= f.label :artist %>
        <%= f.text_field :artist %>
      </div>
    </div>
    <div class="audio-product-row">
      <div class="field">
        <%= f.label :label %>
        <%= f.text_field :label %>
      </div>
      <div class="field">
        <%= f.label "Catalog number (optional)" %>
        <%= f.text_field :catalog_number %>
      </div>
    </div>
  </fieldset>
</div>