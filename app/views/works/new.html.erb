<% provide(:title, "#{current_user.first_name} #{current_user.last_name}") %>
<h2>Submit new work</h2>

<%= form_for(current_user.works.build, url: { controller: :works, action: :create }) do |f|  %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </div>
  <div class="select">
    <%= f.label :copyright_date %>
    <%= f.date_select :copyright_date %>
  </div>
  <div class="field">
    <%= fields_for :audio_products do |builder| %>
      <%= builder.label :album %>
      <%= builder.text_field :album %>
    <% end %>
  </div>
  <div class="field">
    <%=f.submit "Submit work detail", class: 'btn btn-medium btn-success'%>
  </div>
<% end %>