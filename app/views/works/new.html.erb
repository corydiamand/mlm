<% provide(:title, "#{current_user.first_name} #{current_user.last_name}") %>
<h2>Submit new work</h2>

<%= form_for(@work, url: { action: :create }) do |f|  %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :duration %>
    <%= f.text_field :duration %>
  </div>
  <div class="field">
    <%= f.label :copyright_date %>
    <%= f.text_field :copyright_date %>
  </div>
  <%= f.fields_for :work_claims, build_claim(f) do |builder| %>
    <div class="field">
      <%= builder.label "Your share" %>
      <%= builder.text_field :mr_share %>
      <%= builder.hidden_field :user_id, value: current_user.id %>
    </div>
  <% end %>
  <%= f.fields_for :audio_products do |builder| %>
    <%= render 'audio_product_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Audio Product", f, :audio_products %>
  <div class="actions">
    <%= submit_tag "Submit new work", class: "btn btn-large btn-primary" %>
  </div>  
<% end %>

