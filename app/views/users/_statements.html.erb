<ol class="statements">
  <% @statements.each do |statement| %>
    <li id="<%= statement.id%>">
      <span class="content">
        <%= statement.year %>
      </span>
      <span class="content">
        <%= statement.quarter %>
      </span>
      <span class="content amount">
        <%= statement.amount %>
      </span>
      <span class="content">
        <%= link_to user_hosted_file_path(statement.user_id, 
                                          statement.filename) do %>
          <%= image_tag "/assets/pdficon.jpeg", id: "download" %>
        <% end %>
      </span>
    </li>
  <% end %>
</ol>