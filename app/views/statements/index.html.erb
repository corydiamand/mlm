<% provide(:title, "#{@user.first_name} #{@user.last_name}") %>
<h2><%= @user.last_name %>, <%= @user.first_name %></h2>

<% if @statements.any? %>
  <%= render 'statements/statements_body' %>
<% else %>
  <div class='no-data-available'>No statement data available</div>
<% end %>

<%= button_to  "Delete User", admin_user_path(@user), method: :delete, :confirm => "WARNING! This will completely delete the user and all associated statements and works. Are you sure you want to delete this user?" %>